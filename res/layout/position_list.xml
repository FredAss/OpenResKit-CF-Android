<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dip" >
            <TextView
            android:id="@+id/txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:text="Position hinzufÃ¼gen:" />
                <Spinner
            android:id="@+id/positiontypes_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/addpos"
            android:layout_marginLeft="10dp"
             />
        <ImageButton
            android:id="@+id/addpos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtview"
            android:layout_toRightOf="@+id/positiontypes_spinner"
            android:src="@drawable/ic_menu_add" 
            android:layout_marginLeft="5dp"
            android:paddingTop="5dp"
            android:background="#006600"/>

<View
	android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#FF909090"
        android:layout_below="@+id/positiontypes_spinner" />
        <ListView
            android:id="@+id/positionlist"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_below="@+id/positiontypes_spinner"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="10dip"  />
<View
	android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#FF909090"
        android:layout_below="@+id/positionlist" />

<TextView
    android:id="@+id/totaltxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_below="@+id/positionlist"
    android:layout_marginTop="10dip" 
    android:layout_marginLeft="10dp"/>
 
</RelativeLayout>