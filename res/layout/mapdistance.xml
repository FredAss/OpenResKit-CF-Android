<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <Button
        android:id="@+id/strbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Start festlegen:" 
        android:layout_marginTop="5dp"
         android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/endbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strbutton"
        android:text="Ende festlegen:" 
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/strtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/strbutton" />

    <TextView
        android:id="@+id/endtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/endbutton"
        android:layout_toRightOf="@+id/strbutton"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
             
        />

